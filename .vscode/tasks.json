{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Turn .C files into .c files",
            "type": "shell",
            "command": "Get-ChildItem -Path .\\src -Filter *.C -Recurse | Rename-Item -NewName {$_.name -replace '\\.C$','.c'}",
            "options": {
                "shell": {
                    "executable": "powershell.exe"
                }
            }
        },
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-G", "MinGW Makefiles"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cmake compile",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/build/Operation-Ruinam-Dei.exe",
            "group": {
              "kind": "test"
            },
            "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": true,
              "panel": "shared"
            }
        },
        {
            "label": "cmake build and run",
            "dependsOrder": "sequence",
            "dependsOn": ["Turn .C files into .c files","cmake build", "cmake compile", "run"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}