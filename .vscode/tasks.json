{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-I${workspaceFolder}/libs/include",
                "-L${workspaceFolder}/libs/lib",
                "-lSDL2",
                "-lSDL2main",
                "-o",
                "${workspaceFolder}/build/output.exe"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task by GitHub Copilot"
        },
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-DCMAKE_C_COMPILER=C:/MinGW/bin/gcc.exe",
                "-DCMAKE_CXX_COMPILER=C:/MinGW/bin/g++.exe"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cmake compile",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/build/Debug/Operation-Null-Mind.exe",
            "group": {
              "kind": "test"
            },
            "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": true,
              "panel": "shared"
            }
        },
        {
            "label": "cmake build and run",
            "dependsOrder": "sequence",
            "dependsOn": ["cmake build", "cmake compile", "run"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}